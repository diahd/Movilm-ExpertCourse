<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.expert1.movilm">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/m"
        android:label="@string/app_name"
        android:logo="@drawable/m"
        android:roundIcon="@drawable/m"
        android:supportsRtl="true"
        android:theme="@style/Theme.Movilm">
        <activity
            android:name=".detail.DetailActivity"
            android:label="@string/title_activity_detail_film"
            android:parentActivityName=".home.MainActivity"
            android:theme="@style/Theme.Movilm.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.expert1.movilm.home.MainActivity" />

        </activity>
        <activity android:name=".home.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>